<div class="row">
  <div class="large 12 large-centered"><h1>hellow, world</h1></div>
</div>


<div class="container">	
	<table>
	<% @events.each do |event| %> 
	<tr>
		<td> <%= event.title %> </td>
		<td> <%= event.date %> </td>
		<td> <%= event.location %> </td>
		<td> <%= event.description %> </td>
	<% end %>
	</tr>
	</table>

<a href="/vendors/new">Sign up as a Lost Tribes vendor!</a>


<table>
	<% @vendors.each do |vendor| %> 
	<tr>
		<td> <%= vendor.name %> </td>
		<td> <%= vendor.email %> </td>
		<td> <%= vendor.address %> </td>
		<td> <%= vendor.phone %> </td>
		<td> <%= vendor.comment %> </td>

	<% end %>
	</tr>
</table>

<div class="icon">
 <a href="#" data-reveal-id="myModal">
 	<h3><i class="general foundicon-mail"></i></h3>
 </a>
</div>


<div id="myModal" class="reveal-modal">
		<h2>Email Newsletter</h2>
			<%= form_for @customer do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name %><br>

			<%= f.label :email %> 
			<%= f.text_field :email %> <br>

		<%= f.submit %>
		<% end %>  
	<a class="close-reveal-modal">&#215;</a>
</div> 




