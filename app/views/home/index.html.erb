<script src="http://maps.google.com/maps/api/js?key=AIzaSyAWySaUYYlEwvq3KquSOJmFpPwrnLItW4Y&sensor=false" 
          type="text/javascript"></script>
  <div id="map" style="width: 500px; height: 400px;"></div>

  <script type="text/javascript">
    var vendors = [];

    <% @vendors.each do |vendor| %>
      vendors.push(["<%= vendor[0] %>", "<%= vendor[1] %>","<%= vendor[2] %>", "<%= vendor[3] %>", "<%= vendor[4] %>", "<%= vendor[5] %>"]);
    <% end %>

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 12,
      center: new google.maps.LatLng(<%= @map_lat %>, <%= @map_lng %>),
      mapTypeId: google.maps.MapTypeId.satellite
    });

    var infowindow = new google.maps.InfoWindow();

    var marker, i;

    for (i = 0; i < locations.length; i++) {  
      marker = new google.maps.Marker({
        position: new google.maps.LatLng(events[i][2], events[i][3]),
        map: map
      });

      google.maps.event.addListener(marker, 'click', (function(marker, i) {
        return function() {
          infowindow.setContent("<a href = '" + vendors[i][5] + "'>" + vendors[i][0] + "</a>"+  " <br/> Address: " + vendors[i][1] + " <br/> Date: " + events[i][4]);
          infowindow.open(map, marker);
        }
      })(marker, i));
    }
  </script>




