<%= form_for @customer do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %><br>

	<%= f.label :email %> 
	<%= f.text_field :email %> <br>

	<%= f.label :zip %> 
	<%= f.text_field :zip %> <br>

	<%= f.label :comment %> 
	<%= f.text_field :comment %><br>

	<%= f.label :customer_id %>
	<%= f.select :customer_id, Customer.all.map{ |customer| [customer.name, customer.id] } %>


<%= f.submit %>
<% end %>