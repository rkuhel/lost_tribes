%nav.top-bar
  %ul.title-area
    / Title Area
    %li.name
      %h1
        %a{:href => "#"} Lost Tribes
    / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
    %li.toggle-topbar.menu-icon
      %a{:href => "#"}
        %span Menu
  %section.top-bar-section
    / Right Nav Section
    %ul.right
      %li.active
        %a{:href => "#brews"}
          / Brew
          %i.icon-beer
          
      %li.active
        %a{:href => "#map"} 
          / Vendors
          %i.icon-building
          
          
      %li.active
        %a{:href => "#events"} 
          / Events
          %i.general.foundicon-calendar
          
      %li.active
        %a{:href => "mailto:info@LostTribesBrew.com"}
          / Contact Us
          %i.general.foundicon-mail
          

      %li.active
        - unless current_vendor
          = link_to 'Login', sessions_new_path, method: :get, class: "button"
        - else
          = link_to 'Logout', logout_path, method: :delete, class: "button"
